<!DOCTYPE html>
<html>
    <head>
        <link href="/styles/listaPosiciones.css" rel="stylesheet" type="text/css" />
        <link href="/styles/catalogo.css" rel="stylesheet" type="text/css" />
        <link href="/styles/bootstrap.css" rel="stylesheet" type="text/css" />
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Train+One&display=swap" rel="stylesheet">
        <script src="/js/bootstrap.bundle.js"></script>
    </head>

    <body id="listatorneos" class="container">
        <%- include('header') %>
        <h1>Crear Partido - <%= torneo.nombre %></h1>
        <form action="/crearRonda/Torneo<%= torneo.id %>%>" method="POST">
            <h3>EQUIPOS ADENTRO</h3>
        <table class="table table-hover table table-dark table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Fecha de creación</th>
                    <th>ID del participante líder</th>
                    <th>Ver equipo</th>
                </tr>
            </thead>
            <tbody id="data_torneo">
                <% Torneo_Equipo.forEach((te) => { %> 
                    <tr>
                        <td><%= te.id_e.id %></td>
                        <td><%= te.id_e.nombre %></td>
                        <td><%= te.id_e.createdAt %></td>
                        <td><%= te.id_e.idParticipanteLider%></td>
                        <td>
                            <a href="/verEquipo/<%= te.id %>">Ver equipo</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
            <div>
                <label for="fname">Nombre de la ronda:</label><br>
                <input type="text" id="fname" name="r_nombre"><br><br>
                <label for="fname">Número correlativo:</label><br>
                <input type="text" id="fname" name="r_n_cor"><br><br>
                <label for="fname">Fecha de la ronda:</label><br>
                <input type="text" id="fname" name="r_f_ini"><br><br>
            </div>
            <div id="mensajes" class="mt-3">
            </div>
            <div class="modal-footer">
                <a href="/verTorneo/1" id="modal_but_cancelar" class="btn btn-success" type="button">
                    Cancelar
                </a>
                <button id="modal_but_grabar" class="btn btn-success" type="submit">
                    Grabar
                </button>
            </div>
        </form>
        
    </body>
</html>