<!DOCTYPE html>
<html>
    <head>
        <link href="/styles/crearTorneo.css" rel="stylesheet" type="text/css" />
        <link href="/styles/bootstrap.css" rel="stylesheet" type="text/css" />
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Train+One&display=swap" rel="stylesheet">
        <script src="/js/bootstrap.bundle.js"></script>
        <script src="/js/crearTorneo.js"></script>
    </head>

    <body id="crearTorneo" class="container">
        <%- include('header') %>
        <h2>CREACION DE TORNEO</h2>
        <form action="/crearTorneo" method="POST">
            <div class="grid-container">
                <div>
                    <label for="fname">Nombre del torneo:</label><br>
                    <input type="text" id="fname" name="t_nombre"><br><br>
                    <label for="lname">Fecha de inicio:</label><br>
                    <input type="text" id="lname" name="t_f_ini"><br><br>
                    <label for="lname">Fecha de finalización:</label>
                    <input type="text" id="lname" name="t_f_fin"><br><br>
                    <label for="lname">Descripción:</label><br>
                    <input type="text" id="lname" name="t_descripcion"><br><br>
                    <label for="lname">Maximo N° de participantes:</label><br>
                    <input type="text" id="lname" name="t_cantMax"><br><br>
                    <label for="lname">Partidos por Día:</label><br>
                    <input type="text" id="lname" name="t_partDia"><br><br>
                </div>
                <div>
                    <label for="lname">Puntos al Ganar:</label><br>
                    <input type="text" id="lname" name="t_pGanar"><br><br>
                    <label for="lname">Puntos al Empatar:</label><br>
                    <input type="text" id="lname" name="t_pEmpate"><br><br>
                    <label for="lname">Puntos al Perder:</label><br>
                    <input type="text" id="lname" name="t_pPerder"><br><br>
                    <label for="lname">Tipo de torneo</label><br>
                    <select name="t_tipo" id="select_tipo" class="form-select mb-3">
                        <option value="-1">Seleccione un tipo de torneo</option>
                        <option value="TCT">TCT</option>
                        <option value="Directa">Directa</option>
                    </select>

                    <label class="form-label">Juegos</label>
                    <select id="select_juego" name="t_juego" class="form-select">
                        <option value="-1">Seleccione un juego</option>
                        <% juego.forEach((ju) => { %>
                            <option value="<%= ju.id %>"><%= ju.nombre %></option>
                        <% }) %>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <a id="modal_but_cancelar" href="/listaTorneos/1" class="btn btn-warning" type="button">
                    Cancelar
                </a>
                <button id="modal_but_grabar" class="btn btn-warning" type="submit">
                    Grabar
                </button>
            </div>
        </form>
    </body>
</html>